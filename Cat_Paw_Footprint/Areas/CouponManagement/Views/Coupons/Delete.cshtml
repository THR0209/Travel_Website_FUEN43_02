@model Cat_Paw_Footprint.Models.Coupons

@{
    ViewData["Title"] = "下架優惠券";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-danger text-white fw-bold">
                    <i class="fa-solid fa-trash-can me-2"></i> 下架優惠券
                </div>
                <div class="card-body">
                    <h5 class="mb-4 text-danger">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>你確定要下架此優惠券嗎？
                    </h5>
                    <dl class="row">
                        <dt class="col-sm-3 fw-semibold mt-3">優惠碼</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.CouponCode)</dd>

                        <dt class="col-sm-3 fw-semibold">描述</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.CouponDesc)</dd>

                        <dt class="col-sm-3 fw-semibold">折扣類型</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.DiscountType)</dd>

                        <dt class="col-sm-3 fw-semibold">折扣數值</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.DiscountValue)</dd>

                        <dt class="col-sm-3 fw-semibold">開始時間</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.StartDate)</dd>

                        <dt class="col-sm-3 fw-semibold">結束時間</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.EndTime)</dd>

                        <dt class="col-sm-3 fw-semibold">狀態</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">啟用</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">關閉</span>
                            }
                        </dd>
                    </dl>
                    <form asp-action="Delete" class="mt-4" onsubmit="return confirm('你確定要下架這個優惠券嗎？');">
                        <input type="hidden" asp-for="CouponID" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left"></i> 取消
                            </a>
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fa-solid fa-trash-can"></i> 下架
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>