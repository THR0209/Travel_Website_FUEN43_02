@model Cat_Paw_Footprint.Models.Coupons

@{
    ViewData["Title"] = "優惠券詳情";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-info text-white fw-bold">
                    <i class="fa-solid fa-circle-info me-2"></i> 優惠券詳情
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 fw-semibold mt-3">優惠券折扣代碼</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DisCountCode)</dd>

                        <dt class="col-sm-3 fw-semibold">描述</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CouponDesc)</dd>

                        <dt class="col-sm-3 fw-semibold">折扣類型</dt>
                        <dd class="col-sm-9">
                            @if (Model.DiscountType == 0)
                            {
                                <span>百分比折扣 (%)</span>
                            }
                            else
                            {
                                <span>固定金額折扣 ($)</span>
                            }
                        </dd>

                        <dt class="col-sm-3 fw-semibold">折扣值</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DiscountValue)</dd>

                        <dt class="col-sm-3 fw-semibold">開始日期</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

                        <dt class="col-sm-3 fw-semibold">結束日期</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

                        <dt class="col-sm-3 fw-semibold">是否啟用</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive == true)
                            {
                                <span class="badge bg-success">啟用</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">停用</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left"></i> 返回清單
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.CouponID" class="btn btn-info text-white">
                            <i class="fa-solid fa-pen-to-square"></i> 編輯
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
