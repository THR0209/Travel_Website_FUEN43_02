@using Cat_Paw_Footprint.Areas.Employee.ViewModel
@model Cat_Paw_Footprint.Areas.Employee.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "員工註冊";// 設定頁面標題
}



<!-- 顯示 ModelState 的整體錯誤（非欄位級） -->
<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="row justify-content-center">
    <div class="card" style="max-width:500px;">
        <div class="card-body">
            <div class="mb-4 text-center">
                <span class="fw-bold" style="font-size:1.6rem; color:#22b3C1; letter-spacing:2px;">
                    <i class="fa-solid fa-user-plus me-2"></i>註冊員工帳號
                </span>
                <div style="width:60px; height:3px; background:#22b3C1; margin:10px auto 0; border-radius:2px; opacity:.85;"></div>
            </div>
                <form asp-area="Employee" asp-controller="EmployeeAuth" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-3">
                        <label asp-for="Account" class="form-label"></label>
                        <input asp-for="Account" class="form-control" />
                        <span asp-validation-for="Account" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EmployeeName" class="form-label"></label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RoleId" class="form-label"></label>
                        <select asp-for="RoleId" asp-items="ViewBag.RoleList" class="form-select">
                            <option value="">請選擇角色</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-primary w-100 mt-4">註冊</button>
                </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}