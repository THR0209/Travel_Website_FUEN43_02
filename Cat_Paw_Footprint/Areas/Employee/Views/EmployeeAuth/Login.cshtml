@using Cat_Paw_Footprint.Areas.Employee.ViewModel
@model Cat_Paw_Footprint.Areas.Employee.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "登入";// 設定頁面標題
}

@section Styles {
    <style>
        /* 修改帳號與密碼的文字顏色 */
        input[name="Account"],
        input[name="Password"] {
            color: #566A7F;
        }

        /* 修改帳號、密碼 label 文字顏色 */
        label[for="Account"],
        label[for="Password"] {
            color: #566A7F !important;
        }

        /* 修改登入按鈕顏色 */
        button[type="submit"] {
            background-color: #22b3c1;
            border-color: #22b3c1;
        }

        /* 可選：滑鼠hover時改變按鈕顏色 */
        button[type="submit"]:hover {
            background-color: #1da0aa;
            border-color: #1da0aa;
        }
    </style>
}


