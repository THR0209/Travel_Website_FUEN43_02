@model IEnumerable<Cat_Paw_Footprint.Areas.TravelManagement.ViewModel.LocationsViewModel>

@{
    ViewData["Title"] = "景點總覽";
}

<div class="mt-2" id="cr-loc" style="display:none;">
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-square-plus"></i>新增資料
    </a>
</div>
<div class="card">
    <div class="card-body">
        <div class="mb-4 text-center">
            <span class="fw-bold" style="font-size:1.6rem; color:#22b3C1; letter-spacing:2px;">
                <i class="fa-solid fa-location-dot me-2"></i>景點總覽
            </span>
            <div style="width:60px; height:3px; background:#22b3C1; margin:10px auto 0; border-radius:2px; opacity:.85;"></div>
        </div>
        <table id="example" class="display table table-striped" style="table-layout:fixed;">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LocationName)</th>
                    <th>@Html.DisplayNameFor(model => model.LocationAddr)</th>
                    <th>@Html.DisplayNameFor(model => model.LocationDesc)</th>
                    <th>@Html.DisplayNameFor(model => model.LocationPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>@Html.DisplayNameFor(model => model.Views)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th>@Html.DisplayNameFor(model => model.DistrictID)</th>
                    <th>@Html.DisplayNameFor(model => model.RegionID)</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.LocationName</td>
                        <td>@item.LocationAddr</td>
                        <td>@item.LocationDesc</td>
                        <td>@item.LocationPrice</td>
                        <td>@item.Rating</td>
                        <td>@item.Views</td>
                        <td>
                            <button class="btn btn-sm toggle-active @(item.IsActive == true ? "btn-success" : "btn-warning")"
                                    data-id="@item.LocationID"
                                    data-status="@(item.IsActive)">
                                @(item.IsActive == true ? "上架" : "下架")
                            </button>
                        </td>
                        <td>@item.DistrictName</td>
                        <td>@item.RegionName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.LocationID" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-pen-to-square"></i>編輯</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- FixedHeader 套件 -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.4.0/css/fixedHeader.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>

    <script>
        
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    search: "搜尋：",
                    lengthMenu: "每頁顯示 _MENU_ 筆",
                    info: "顯示第 _START_ 到 _END_ 筆，共 _TOTAL_ 筆",
                    paginate: {
                        first: "第一頁",
                        last: "最後一頁",
                        next: "下一頁",
                        previous: "上一頁"
                    },
                    zeroRecords: "找不到資料",
                },
                lengthMenu: [5, 10, 25, 50],
                pageLength: 10,
                columnDefs: [
                    { targets: 0, width: "10%" },
                    { targets: 1, width: "12%" },
                    { targets: 2, width: "25%" },
                    { targets: 3, // 第 4 欄 (價格)
                        width: "10%",
                        render: function (data, type, row) {
                            if (type === 'display') {
                                let price = parseFloat(data) || 0;
                                return "NT$" + price.toLocaleString();
                            }
                            return data;
                        }
                    },
                    {
                        targets: 4, // 第 5 欄 (評分)
                        width: "15%",
                        render: function (data, type, row) {
                            if (type === 'display') {
                                var score = parseFloat(data) || 0;
                                var fullStars = Math.floor(score);
                                var halfStar = (score % 1 >= 0.5) ? 1 : 0;
                                var emptyStars = 5 - fullStars - halfStar;

                                var stars = '★'.repeat(fullStars);
                                if (halfStar) stars += '☆';
                                stars += '✰'.repeat(emptyStars);

                                return `<span style="color:gold; font-size:14px;">${stars}</span> <small>(${score})</small>`;
                            }
                            return data;
                        }
                    },
                    { targets: 5, width: "5%" },
                    { targets: 6, width: "5%" },
                    { targets: 7, width: "2%" },
                    { targets: 8, width: "2%" },
                    { targets: 9, width: "10%" }
                ],
            });

            $("#example th").css("width", "");
            $('.dataTables_length').after($('#cr-loc').show());

            // 啟用/停用按鈕的點擊事件
            $('#example').on('click', '.toggle-active', function () {
                var button = $(this);
                var id = button.data('id');
                var currentStatus = button.data('status');

                $.ajax({
                    url: '@Url.Action("ToggleActive", "Locations")',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            button.data('status', res.newStatus);
                            if (res.newStatus) {
                                button.removeClass("btn-secondary").addClass("btn-success").text("上架");
                            } else {
                                button.removeClass("btn-success").addClass("btn-waring").text("下架");
                            }
                        } else {
                            alert("更新失敗");
                        }
                    },
                    error: function () {
                        alert("發生錯誤，請稍後再試");
                    }
                });
            });
        });
    </script>
}