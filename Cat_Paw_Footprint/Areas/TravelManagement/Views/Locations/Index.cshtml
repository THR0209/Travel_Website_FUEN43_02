@model IEnumerable<Cat_Paw_Footprint.Areas.TravelManagement.ViewModel.LocationsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>景點</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增資料</a>
</p>

<table id="example" class="display table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LocationName)</th>
            <th>@Html.DisplayNameFor(model => model.LocationAddr)</th>
            <th>@Html.DisplayNameFor(model => model.LocationLat)</th>
            <th>@Html.DisplayNameFor(model => model.LocationLng)</th>
            <th>@Html.DisplayNameFor(model => model.LocationDesc)</th>
            <th>@Html.DisplayNameFor(model => model.LocationPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Rating)</th>
            <th>@Html.DisplayNameFor(model => model.Views)</th>
            <th>@Html.DisplayNameFor(model => model.LocationCode)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.DistrictID)</th>
            <th>@Html.DisplayNameFor(model => model.RegionID)</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LocationName</td>
                <td>@item.LocationAddr</td>
                <td>@item.LocationLat</td>
                <td>@item.LocationLng</td>
                <td>@item.LocationDesc</td>
                <td>@item.LocationPrice</td> <!-- ⭐ 這裡會用 render 改成 NT$ 格式 -->
                <td>@item.Rating</td>        <!-- ⭐ 這裡會用 render 改成星星 -->
                <td>@item.Views</td>
                <td>@item.LocationCode</td>
                <td>@item.IsActiveText</td>
                <td>@item.DistrictName</td>
                <td>@item.RegionName</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.LocationID" class="btn btn-sm btn-primary">修改</a>
                    <a asp-action="Details" asp-route-id="@item.LocationID" class="btn btn-sm btn-success">詳細資料</a>
                    <a asp-action="Delete" asp-route-id="@item.LocationID" class="btn btn-sm btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

    <!-- FixedHeader 套件 -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.4.0/css/fixedHeader.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                lengthMenu: [5, 10, 25, 50],
                pageLength: 10,
                fixedHeader: true,
                columnDefs: [
                    {
                        targets: 5, // 第 6 欄 (價格)
                        render: function (data, type, row) {
                            if (type === 'display') {
                                let price = parseFloat(data) || 0;
                                return "NT$" + price.toLocaleString(); // 千分位
                            }
                            return data;
                        }
                    },
                    {
                        targets: 6, // 第 7 欄 (評分)
                        render: function (data, type, row) {
                            if (type === 'display') {
                                var score = parseFloat(data) || 0;
                                var fullStars = Math.floor(score);
                                var halfStar = (score % 1 >= 0.5) ? 1 : 0;
                                var emptyStars = 5 - fullStars - halfStar;

                                var stars = '★'.repeat(fullStars);
                                if (halfStar) stars += '☆';
                                stars += '✰'.repeat(emptyStars);

                                return `<span style="color:gold; font-size:14px;">${stars}</span> <small>(${score})</small>`;
                            }
                            return data;
                        }
                    }
                ],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json"
                }
            });
        });
    </script>
}
