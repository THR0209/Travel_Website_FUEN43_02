@model IEnumerable<Cat_Paw_Footprint.Areas.TravelManagement.ViewModel.RestaurantsViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>美食</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增資料</a>
</p>

<table id="example" class="display table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.RestaurantName)</th>
            <th>@Html.DisplayNameFor(model => model.RestaurantAddr)</th>
            <th>@Html.DisplayNameFor(model => model.RestaurantLat)</th>
            <th>@Html.DisplayNameFor(model => model.RestaurantLng)</th>
            <th>@Html.DisplayNameFor(model => model.RestaurantDesc)</th>
            <th>@Html.DisplayNameFor(model => model.Rating)</th>
            <th>@Html.DisplayNameFor(model => model.Views)</th>
            <th>@Html.DisplayNameFor(model => model.RestaurantCode)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>            
            <th>@Html.DisplayNameFor(model => model.DistrictName)</th>
            <th>@Html.DisplayNameFor(model => model.RegionName)</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.RestaurantName)</td>
            <td>@Html.DisplayFor(modelItem => item.RestaurantAddr)</td>
            <td>@Html.DisplayFor(modelItem => item.RestaurantLat)</td>
            <td>@Html.DisplayFor(modelItem => item.RestaurantLng)</td>
            <td>@Html.DisplayFor(modelItem => item.RestaurantDesc)</td>
            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
            <td>@Html.DisplayFor(modelItem => item.Views)</td>
            <td>@Html.DisplayFor(modelItem => item.RestaurantCode)</td>
            <td>@Html.DisplayFor(modelItem => item.IsActiveText)</td>            
            <td>@Html.DisplayFor(modelItem => item.DistrictName)</td>
            <td>@Html.DisplayFor(modelItem => item.RegionName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RestaurantID" class="btn btn-sm btn-primary">修改</a>
                <a asp-action="Details" asp-route-id="@item.RestaurantID" class="btn btn-sm btn-success">詳細資料</a>
                <a asp-action="Delete" asp-route-id="@item.RestaurantID" class="btn btn-sm btn-danger">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

    <!-- FixedHeader 套件 -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.4.0/css/fixedHeader.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                lengthMenu: [5, 10, 25, 50],   // 每頁顯示筆數
                pageLength: 10,                // 預設顯示 10 筆
                fixedHeader: true,  // 固定表頭

                columnDefs: [{
                        targets: 5, // 第 6 欄 (評分)
                        render: function (data, type, row) {
                            if (type === 'display') {
                                var score = parseFloat(data) || 0;
                                var fullStars = Math.floor(score);
                                var halfStar = (score % 1 >= 0.5) ? 1 : 0;
                                var emptyStars = 5 - fullStars - halfStar;

                                var stars = '★'.repeat(fullStars);
                                if (halfStar) stars += '☆';
                                stars += '✰'.repeat(emptyStars);

                                return `<span style="color:gold; font-size:14px;">${stars}</span> <small>(${score})</small>`;
                            }
                            return data;
                        }
                }],

                language: { //載入中文語系
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json"
                }
            });
        });
    </script>
}