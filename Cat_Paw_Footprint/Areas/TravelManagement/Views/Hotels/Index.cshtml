@* @model IEnumerable<Cat_Paw_Footprint.Models.Hotels> *@
@model IEnumerable<Cat_Paw_Footprint.Areas.TravelManagement.ViewModel.HotelsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>住宿</h1>

<p>
    <a asp-action="Create">新增資料</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelAddr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelLat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelLng)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Views)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrictName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keywords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelAddr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelLat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelLng)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Views)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Keywords)
            </td>
            <td>
                @foreach (var pic in item.Picture) // Pictures 是 List<string> 或 List<byte[]>
                {
                    if (pic is byte[] bytes)
                    {
                        var base64 = "data:image/jpeg;base64," + Convert.ToBase64String(bytes);
                        <img src="@base64" alt="圖片" width="80" />
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HotelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HotelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HotelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
