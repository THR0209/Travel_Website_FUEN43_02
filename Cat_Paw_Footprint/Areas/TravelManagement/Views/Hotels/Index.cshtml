@* @model IEnumerable<Cat_Paw_Footprint.Models.Hotels> *@
@model IEnumerable<Cat_Paw_Footprint.Areas.TravelManagement.ViewModel.HotelsViewModel>

@{
    ViewData["Title"] = "Index";
}
@{
    //ViewBag 下拉選單方法
    var regions = ViewBag.Regions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<h1>住宿</h1>

<p>
    <a asp-action="Create">新增資料</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelAddr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelLat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelLng)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.HotelCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrictID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionID)
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelAddr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelLat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelLng)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelCode)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IsActiveText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>            
            <td>
                <a asp-action="Edit" asp-route-id="@item.HotelID">修改</a>                 
                <a asp-action="Details" asp-route-id="@item.HotelID">詳細資料</a>                 
                <a asp-action="Delete" asp-route-id="@item.HotelID">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
