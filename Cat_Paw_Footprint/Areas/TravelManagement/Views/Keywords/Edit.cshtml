@model Cat_Paw_Footprint.Models.Keywords

@{
    ViewData["Title"] = "修改關鍵字";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm rounded-3">
                <div class="card-header fw-bold text-white" style="background: linear-gradient(90deg,#22b3c1 60%,#b4e1eb 100%);">
                    <i class="fa-solid fa-pen-to-square me-2"></i> 修改關鍵字
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="KeywordID" />

                        <div class="mb-3 mt-2">
                            <label asp-for="Keyword" class="form-label fw-semibold"></label>
                            <input asp-for="Keyword" class="form-control" />
                            <span asp-validation-for="Keyword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Views" class="form-label fw-semibold"></label>
                            <input asp-for="Views" class="form-control" />
                            <span asp-validation-for="Views" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left"></i> 返回
                            </a>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fa-solid fa-save"></i> 確認
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}