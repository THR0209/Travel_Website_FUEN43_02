@model IEnumerable<Cat_Paw_Footprint.Areas.Admin.ViewModel.NewsReadViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="width: 30%;">
                @Html.DisplayNameFor(model => model.NewsTitle)
            </th>
            <th style="width: 12%;">
                @Html.DisplayNameFor(model => model.PublishTime)
            </th>
            <th style="width: 12%;">
                @Html.DisplayNameFor(model => model.ExpireTime)
            </th>
            <th style="width: 8%;">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th style="width: 12%;">
                @Html.DisplayNameFor(model => model.UpdateTime)
            </th> 
            <th style="width: 12%;">
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th style="width: 14%;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewsTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpireTime)
            </td>
            <td>
                   @* <div class="form-check form-switch">
                     <input class="form-check-input" type="checkbox" disabled @(item.IsActive == true ? "checked" : "") />
                    </div> *@

                  @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                <a asp-controller="NewsTables" asp-action="Edit" asp-route-id="@item.NewsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NewsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NewsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
