@model Cat_Paw_Footprint.Areas.Admin.ViewModel.PromotionViewModel

@{
    ViewData["Title"] = "刪除優惠活動";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-danger text-white fw-bold">
                    <i class="fa-solid fa-trash-can me-2"></i> 刪除優惠活動
                </div>
                <div class="card-body">
                    <h5 class="mb-4 text-danger">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>你確定要刪除此優惠活動嗎？
                    </h5>
                    <dl class="row">
                        <dt class="col-sm-3 fw-semibold mt-3">活動名稱</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.PromoName)</dd>

                        <dt class="col-sm-3 fw-semibold">活動描述</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.PromoDesc)</dd>

                        <dt class="col-sm-3 fw-semibold">開始時間</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.StartTime)</dd>

                        <dt class="col-sm-3 fw-semibold">結束時間</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.EndTime)</dd>

                        <dt class="col-sm-3 fw-semibold">折扣類型</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.DiscountTypeName)</dd>

                        <dt class="col-sm-3 fw-semibold">折扣數值</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.DiscountValueDisplay)</dd>

                        <dt class="col-sm-3 fw-semibold">狀態</dt>
                        <dd class="col-sm-9">
                            @Html.ActiveBadge(Model.IsActive)
                        </dd>
                    </dl>
                    <h5 class="fw-bold mt-4">
                        <i class="fa-solid fa-boxes-stacked me-2"></i>綁定的產品
                    </h5>
                    <table class="table table-striped table-bordered mb-4" id="productTable">
                        <thead class="table-primary">
                            <tr>
                                <th>產品名稱</th>
                                <th>價格</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Products)
                            {
                                <tr>
                                    <td>@p.ProductName</td>
                                    <td>@p.ProductPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <form asp-action="Delete" class="mt-4" onsubmit="return confirm('你確定要刪除這個優惠活動嗎？');">
                        <input type="hidden" asp-for="PromoID" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left"></i> 取消
                            </a>
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fa-solid fa-trash-can"></i> 刪除
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <script>
        $(document).ready(function () {
            $('#productTable').DataTable({
                paging: false,
                searching: false,
                info: false,
                ordering: true
            });
        });
    </script>
}