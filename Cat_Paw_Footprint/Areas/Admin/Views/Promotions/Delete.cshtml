@model Cat_Paw_Footprint.Areas.Admin.ViewModel.PromotionViewModel

@{
    ViewData["Title"] = "刪除優惠活動";
}

<h1>刪除優惠活動</h1>

@* <h4>確定要刪除這個優惠活動嗎？</h4> *@
<hr />

<!-- 活動基本資料 -->
<table class="table table-bordered">
    <tbody>
        <tr>
            <th>@Html.DisplayNameFor(m => m.PromoName)</th>
            <td>@Html.DisplayFor(m => m.PromoName)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.PromoDesc)</th>
            <td>@Html.DisplayFor(m => m.PromoDesc)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.StartTime)</th>
            <td>@Html.DisplayFor(m => m.StartTime)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.EndTime)</th>
            <td>@Html.DisplayFor(m => m.EndTime)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.DiscountType)</th>
            <td>@Html.DisplayFor(m => m.DiscountType)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.DiscountValue)</th>
            <td>@Html.DisplayFor(m => m.DiscountValue)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(m => m.IsActive)</th>
            <td>
                @if (Model.IsActive == true)
                {
                    <span class="text-success">啟用</span>
                }
                else
                {
                    <span class="text-danger">停用</span>
                }
            </td>
        </tr>
    </tbody>
</table>

<!-- 綁定的產品清單 -->
<h5>綁定的產品</h5>
<table class="table table-striped table-bordered" id="productTable">
    <thead class="table-primary">
        <tr>
            <th>產品名稱</th>
            <th>價格</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.ProductPrice</td>
            </tr>
        }
    </tbody>
</table>

<!-- 刪除確認 -->
<form asp-action="Delete">
    <input type="hidden" asp-for="PromoID" />
    <button type="submit" class="btn btn-danger">刪除</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <script>
        $(document).ready(function () {
            $('#productTable').DataTable({
                paging: false,
                searching: false,
                info: false,
                ordering: true
            });
        });
    </script>
}
