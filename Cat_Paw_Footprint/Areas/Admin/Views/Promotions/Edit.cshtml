@model Cat_Paw_Footprint.Areas.Admin.ViewModel.PromotionViewModel

@{
    ViewData["Title"] = "編輯優惠活動";
}

@section Styles {
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.4.0/css/fixedHeader.dataTables.min.css" />
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-warning text-dark fw-bold">
                    <i class="fa-solid fa-pen-to-square me-2"></i> 編輯優惠活動
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="PromoID" />

                        <div class="mb-3 mt-3">
                            <label asp-for="PromoName" class="form-label fw-semibold"></label>
                            <input asp-for="PromoName" class="form-control" />
                            <span asp-validation-for="PromoName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PromoDesc" class="form-label fw-semibold"></label>
                            <input asp-for="PromoDesc" class="form-control" />
                            <span asp-validation-for="PromoDesc" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label fw-semibold"></label>
                            <input asp-for="StartTime" class="form-control" type="datetime-local" min="2000-01-01T00:00" max="2099-12-31T23:59" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndTime" class="form-label fw-semibold"></label>
                            <input asp-for="EndTime" class="form-control" type="datetime-local" min="2000-01-01T00:00" max="2099-12-31T23:59" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiscountType" class="form-label fw-semibold"></label>
                            <select asp-for="DiscountType" class="form-select">
                                <option value="1">百分比折扣 (%)</option>
                                <option value="2">固定金額折扣 (元)</option>
                            </select>
                            <span asp-validation-for="DiscountType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiscountValue" class="form-label fw-semibold"></label>
                            <input asp-for="DiscountValue" class="form-control" />
                            <span asp-validation-for="DiscountValue" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="hidden" asp-for="IsActive" value="false" />
                            <input type="checkbox" class="form-check-input" asp-for="IsActive" value="true" />
                            <label asp-for="IsActive" class="form-check-label fw-semibold">上架</label>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <hr />
                        <h5 class="fw-bold"><i class="fa-solid fa-boxes-stacked me-2"></i>綁定產品</h5>
                        <table class="table table-bordered table-striped align-middle mb-4">
                            <thead class="table-primary">
                                <tr>
                                    <th>選取</th>
                                    <th>產品名稱</th>
                                    <th>價格</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="SelectedProductIDs" value="@product.ProductID"
                                                   @(Model.SelectedProductIDs.Contains(product.ProductID) ? "checked" : "") />
                                        </td>
                                        <td>@product.ProductName</td>
                                        <td>@product.ProductPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left"></i> 回到上一頁
                            </a>
                            <button type="submit" class="btn btn-outline-warning text-dark">
                                <i class="fa-solid fa-save"></i> 儲存
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/zh-HANT.json'
                },
                layout: {
                    topStart: {
                        buttons: ['copy', 'csv', 'pdf', 'print']
                    }
                },
                fixedHeader: true
            });
        });
    </script>
}