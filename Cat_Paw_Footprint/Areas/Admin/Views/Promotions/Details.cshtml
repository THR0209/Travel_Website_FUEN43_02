@model Cat_Paw_Footprint.Areas.Admin.ViewModel.PromotionViewModel

@{
    ViewData["Title"] = "詳細資訊";
}

<h1>優惠活動詳細資訊</h1>

<table class="table table-bordered">
    <tr>
        <th>活動名稱</th>
        <td>@Html.DisplayFor(m => m.PromoName)</td>
    </tr>
    <tr>
        <th>活動描述</th>
        <td>@Html.DisplayFor(m => m.PromoDesc)</td>
    </tr>
    <tr>
        <th>開始時間</th>
        <td>@Html.DisplayFor(m => m.StartTime)</td>
    </tr>
    <tr>
        <th>結束時間</th>
        <td>@Html.DisplayFor(m => m.EndTime)</td>
    </tr>
    <tr>
        <th>折扣類型</th>
        <td>@Html.DisplayFor(m => m.DiscountType)</td>
    </tr>
    <tr>
        <th>折扣數值</th>
        <td>@Html.DisplayFor(m => m.DiscountValue)</td>
    </tr>
    <tr>
        <th>是否啟用</th>
        <td>
            <input type="checkbox" disabled="disabled" @(Model.IsActive ? "checked" : "") />
        </td>
    </tr>
    <tr>
        <th>建立時間</th>
        <td>@Html.DisplayFor(m => m.CreateTime)</td>
    </tr>
    <tr>
        <th>更新時間</th>
        <td>@Html.DisplayFor(m => m.UpdateTime)</td>
    </tr>
</table>

<h3>綁定的產品</h3>
<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>產品名稱</th>
            <th>價格</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.PromoID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
