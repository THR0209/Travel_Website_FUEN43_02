@{
    ViewData["Title"] = "Home Page";
    var login = Context.Session.GetString("Login");
}

<div class="text-center">
    <h1 class="display-4">首頁</h1>
    <p>
        這裡是首頁，您的登入狀態:
        <span>
            @if (login == "True") 
            {
                @:登入中
            }
                
            else 
            {
                @:未登入 
            }
        </span>
        </p>
</div>

