<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>貓爪足跡-@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" /> *@

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/ui design/assets/img/favicon/favicon.ico" /> <!-- 路徑注意 -->
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Chiron+GoRound+TC&display=swap">

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/ui design/assets/vendor/fonts/boxicons.css" /> <!-- 路徑注意 -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/ui design/assets/vendor/css/core.css" class="template-customizer-core-css" />  <!-- 路徑注意 -->
    <link rel="stylesheet" href="~/ui design/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />  <!-- 路徑注意 -->
    <link rel="stylesheet" href="~/ui design/assets/css/demo.css" />  <!-- 路徑注意 -->
    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/ui design/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/ui design/assets/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/ui design/assets/vendor/js/helpers.js"></script>

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="~/ui design/assets/js/config.js"></script>
    @* @{
        var roleId = Context.Session.GetString("EmpRoleId");
        var status = Context.Session.GetString("Status"); // "True" 或 "False"
    }*@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body> 
    @{
        var Id = Context.Session.GetString("EmpId");
        var RoleId = Context.Session.GetString("EmpRoleId");
        var RoleName = Context.Session.GetString("EmpRoleName");
        var Name = Context.Session.GetString("EmpName");
        var status = Context.Session.GetString("Status");// "True" 或 "False"
        var login = Context.Session.GetString("Login");// "True" 或 "False"
    }
        
    
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <span class="app-brand-logo demo">
                        <img src="/images/Logo.png" alt="TravelPaws Logo" style="height:60px;">
                    </span>
                    <span class="app-brand-text demo menu-text fw-bolder ms-3 mt-3" style="">貓爪足跡</span>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1" style="scrollbar-width:none; -ms-overflow-style:none; overflow-y:auto;">

                    @if (login != "True")
                    {
                        @await Html.PartialAsync("_Guest")
                    }
                    else
                    {
                        switch (RoleId)
                        {
                            case "6":
                                @await Html.PartialAsync("_SuperAdmin")
                                break;
                            case "5":
                                @await Html.PartialAsync("_Admin")
                                break;
                            case "4":
                                @await Html.PartialAsync("_CustomerService")
                                break;
                            case "3":
                                @await Html.PartialAsync("_Sales")
                                break;
                            case "2":
                                @await Html.PartialAsync("_TourGuide")
                                break;
                            case "1":
                                @await Html.PartialAsync("_ProductPlanner")
                                break;
                        }
                    }
                </ul>
            </aside>
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">

                <nav aria-label="breadcrumb" class="small">
                        <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                            <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                                <i class="bx bx-menu bx-sm"></i>
                            </a>
                        </div>
                </nav>
  

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                    <!-- / Content -->
                    <!-- Footer -->
                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl d-flex flex-wrap justify-content-center py-2 flex-md-row flex-column text-center">
                            <div class="mb-2 mb-md-0">
                                © 2025, made by FUEN43 Group 2.
                            </div>
                        </div>
                    </footer>
                    <!-- / Footer -->
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/ui design/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/ui design/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/ui design/assets/vendor/js/bootstrap.js"></script>
    <script src="~/ui design/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/ui design/assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <script src="~/ui design/assets/vendor/libs/apex-charts/apexcharts.js"></script>

    <!-- Main JS -->
    <script src="~/ui design/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/ui design/assets/js/dashboards-analytics.js"></script>
    <!-- 放在 _Layout 任何地方一次就好 -->
    <form id="logoutForm" asp-area="Employee" asp-controller="EmployeeAuth" asp-action="Logout" method="post" class="d-none">
        @Html.AntiForgeryToken()
    </form>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
